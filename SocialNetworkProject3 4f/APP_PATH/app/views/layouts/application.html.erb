<!DOCTYPE html>
<html>
<head>
  <title>APP_PATH</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="banner">
  <%=image_tag("https://lh5.ggpht.com/_XklY7dK6yGsYt53X15RIp7-tbdjWMwQwl_iUAcW-uSq_8zAprmywdn5DQfBHvxZurs1=w50")%>
  <%= @page_title || "Mini-Face" %>
  </div>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>


<%= yield %>

<%= render 'layouts/user_widget' %>
<% if signed_in? %>
    <p>Signed in as <%= current_user.email %> (<%= link_to 'sign out', :destroy_user_session, method: :delete %>)</p>
    <p><%= link_to 'My Conversation', :conversations %></p>
    <p><%= link_to 'home', :controller=>'user_home', :action =>'index' %></p>
<% else %>
    <p>Please, <%= link_to 'sign in', :new_user_session %></p>
<% end %>


</body>
</html>
