<h2>Friends</h2>
<ul>
  <% for friendship in @user.friendship %>
      <li>
        <%=h friendship.friend.email %>
        (<%= link_to "remove", friendship, :method => :delete %>)
      </li>
  <% end %>
</ul>



<h2>Friended by Users</h2>
<ul>
  <% for user in @user.inverse_friend %>
      <li><%=h user.email %></li>
  <% end %>
</ul>